<%= form_for @topic do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div class="action">
    <%= f.submit %>
    <span> or </span>
    <%= link_to "Cancel", topics_path %>
  </div>

<% end %>